<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="com.example.istiaque.donateblood.Registration">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/gradient_background"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Registration Form"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="390dp"
                android:paddingStart="10dp"
                android:paddingLeft="30dp"
                android:orientation="vertical"
                android:clickable="true"
                android:scrollbarAlwaysDrawVerticalTrack="true">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:hint="Name"
                    android:inputType="text"
                    android:layout_marginTop="20dp"
                    android:height="100dp"
                    android:paddingLeft="25dp"
                    android:textSize="20dp"
                    android:elevation="2dp"
                    android:background="@drawable/rounded_textview"/>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:height="100dp"
                    android:elevation="2dp"
                    android:background="@drawable/rounded_textview"
                    android:hint="Email"
                    android:inputType="text"
                    android:paddingLeft="25dp"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/bloodgroup"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:height="100dp"
                    android:elevation="2dp"
                    android:background="@drawable/rounded_textview"
                    android:hint="Blood Group"
                    android:inputType="text"
                    android:paddingLeft="25dp"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"/>

                <com.mancj.materialsearchbar.MaterialSearchBar
                    style="@style/MaterialSearchBarLight"
                    app:mt_speechMode="false"
                    app:mt_hint="Ex. Jashore Dhaka"
                    app:mt_maxSuggestionsCount="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/searchBar"
                    android:layout_margin="20dp"
                    android:elevation="5dp"
                    android:outlineProvider="bounds"
                    app:mt_placeholder="Enter a Location" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lastdonation"
                        android:layout_width="320dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:hint="Last Date of Donation"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="340dp"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:clickable="true">

                        <EditText
                            android:id="@+id/date"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="30dp"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:elevation="2dp"
                            android:background="@drawable/rounded_textview"
                            android:hint="Date"
                            android:inputType="number"
                            android:paddingLeft="8dp"
                            android:textSize="18dp"/>

                        <EditText
                            android:id="@+id/month"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:elevation="2dp"
                            android:background="@drawable/rounded_textview"
                            android:hint="Month"
                            android:inputType="number"
                            android:paddingLeft="7dp"
                            android:textSize="17dp"/>

                        <EditText
                            android:id="@+id/year"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:elevation="2dp"
                            android:background="@drawable/rounded_textview"
                            android:hint="Year"
                            android:inputType="number"
                            android:paddingLeft="40dp"
                            android:textSize="18dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/register"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/buttonbackground"
            android:backgroundTintMode="@color/colorAccent"
            android:text="Register"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
