<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="com.example.istiaque.donateblood.PhoneAuth">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:paddingTop="10dp"
            android:text="Phone Number Authentication"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bdflag"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/bdflag" />

            <TextView
                android:id="@+id/bdcountrycode"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="BD +880"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="19dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/phnnumber"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:hint="Phone Number"
                android:paddingLeft="20dp"
                android:background="@drawable/rounded_textview"
                android:inputType="number"/>

        </LinearLayout>

        <Button
            android:id="@+id/sendverification"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonbackground"
            android:text="Send Verification Code"
            android:textColor="#ffffff"
            android:textStyle="bold" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
